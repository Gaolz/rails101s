<div class="login-in">
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "邮箱", icon: "fa fa-envelope-o fa-fw" %>
	    <%= f.input :password, required: false, label: false, placeholder: "密码", icon: "fa fa-lock" %>
	    <%= f.input :remember_me, wrapper: :vertical_boolean, as: :boolean, label: "记住我" if devise_mapping.rememberable? %>
	    <div class="form-actions">
	      <%= f.button :submit, "登录", class: "btn-success" %>
	    </div>
	  </div>
	<% end %>
</div>