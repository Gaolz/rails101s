<div class="col-md-12">
	<table class="table table-hover">
		<thead>
			<tr>
				<td>组名</td>
				<td>概述</td>
			</tr>
		</thead>
		<tbody>
			<% @groups.each do |group| %>
				<tr>
					<td><%= link_to(truncate(group.title, length: 15), group_path(group)) %></td>
					<td><%= group.description %></td>
					<td>
						<% if current_user && group.editable_by?(current_user) %>
							<%= link_to("Edit", edit_group_path(group), class: "btn btn-sm btn-default") %>
							<%= link_to("Delete", group_path(group), method: :delete, data: { confirm: "Are you sure? "}, class: "btn btn-sm btn-default") %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<div class="group">
		<%= link_to("创建讨论组", new_group_path, class: "btn btn-primary pull-right") %>
	</div>
</div>